.w{max-width: 990px;width: 100%;margin: 0 auto;}
body{
	font-size: 100%;
	background url(../img/top_bgn.jpg) left 25px repeat-x
}
a
	color inherit
	&:hover
		color #B21112!important
		text-decoration underline
.host-unit
	background #f3f3f3
	font-size 12px
	color #333
	line-height 2
	border-bottom 1px solid #dcedf1
	p
		padding-right 25px
		a
			margin-left 11px
			color #333
.header
	.object
		font-size 0
	.nav
		background url(../img/index06.gif) left top repeat-x
		background url(../img/index05.gif) left top no-repeat,
		url(../img/index07.gif) right top no-repeat,
		url(../img/index06.gif) left top repeat-x
		font-size 0
		a
			width 12.5%
			height 60px
			font-size 16px
			color #fff
			line-height 60px
			text-align center
			font-weight bold
			&:hover
				color #9BCDFF!important
				text-decoration none
.ads
	img
		display block
		width 100%
.form
	background url(../img/index18.gif) left center no-repeat
	table
		height 36px
		width 100%
		font-size 12px
		color rgb(51,51,51)
		.pl10
			padding-left 10px
		.cfff
			color #fff
		input
			width 80px
			&.w40
				width 40px
		img
			display block
			height 20px
		.submit
			width 61px
			height 20px
			border none
			background url(../img/dll.gif) center center no-repeat
			background url(../img/dll.gif) center center/100% 100% no-repeat
			vertical-align middle
		.lost-password
			width 61px
			height 20px
			border none
			background url(../img/zhmm.gif) center center no-repeat
			background url(../img/zhmm.gif) center center/100% 100% no-repeat
			vertical-align middle
		.vip-activation
			width 100px
			height 20px
			border none
			background url(../img/hyjh.gif) center center no-repeat
			background url(../img/hyjh.gif) center center/100% 100% no-repeat
			vertical-align middle

h1
	font-size 36px
	color #153F8A
	line-height 1.5
.sub-title
	padding-bottom 10px
	p
		font-size 15px
		line-height 1
		padding-left 15px
		padding-right 30px
		background url(../img/hico1.png) left center no-repeat
.footer
	text-align center
	font-size 14px
	color #333
	line-height 2
	img
		display block
		margin 0 auto
	.bg
		background url(../img/ddtu.jpg) left top repeat-x

.hcl-top-wrap
	.columns-292
		width 290px
	.columns-380
		width 380px
		margin-left 15px
	.columns-292
		width 290px
	.mt10
		margin-top 10px
	.columns-first
		background none
		.scroll-text
			width 100%
			overflow hidden
			background #e9e9e9
			ul
				li
					float left
					padding 5px 0 5px 40px
					a
						font-size 14px
						color #000
						line-height 2
	.columns-second
		background none
	.columns-third
		background none
	.list-style-1
		border 1px solid #ACCDEE
		background #fff url(../img/xinindex01.jpg) left top no-repeat
		.title
			padding 0 5px 0 2px
			font-size 15px
			color #fff
			line-height 30px
			a.title
				&:hover
					color #fff!important
			.more
				color #000
		.master
			padding 0 10px
			font-size 14px
			color #000
			line-height 2
			background rgb(225, 238, 250)
			a
				padding-left 20px
				background url() left center no-repeat
				&.pl0
					padding-left 0
		.marquee
			padding 5px 0 0
			margin 0 5px
			height 105px
			overflow hidden
			.wrap
				white-space nowrap
				a
					width 72px
					padding 0 5px 0 0
					box-sizing border-box
					img
						display block
						width 100%
					h3
						font-size 16px
						color #313332
						line-height 2
						text-align center
	.list-style-2
		background url(../img/bj_title3.jpg) left top no-repeat
		.title
			text-indent 30px
			color #144089
			a.title
				font-weight bold
				&:hover
					color #144089!important
	.list-style-3
		border none
		background url(../img/index25.jpg) left top no-repeat
		.title
			line-height 26px
			text-indent 5px
	.list-style-4
		border none
		background url(../img/sqfb.jpg) left top no-repeat
		.title
			line-height 28px
			text-align center
			color #153e8d
			a.title
				font-weight bold
				&:hover
					color #153e8d!important
	ul.list
		font-size 14px
		color #000
		line-height 2
		margin-left 30px
		padding-right 10px
		li
			list-style-type disc
			width 100%
			a
				float left
				width 100%
				overflow hidden
				white-space nowrap
				text-overflow ellipsis
				&.c214992
					color #214992
					font-weight bold
	.list-child-style-1
		padding 5px
		&.h70
			height 70px
			overflow hidden
		.fl
			width 35%
			img
				display block
				width 100%
		.fr
			width 60%
			h3
				font-size 12px
				color #333
				line-height 2
			p
				font-size 12px
				color #676765
				line-height 2
	.name-list
		a
			width 20%
			text-align center
			line-height 2
			font-size 14px
			color #333



.scroll-pictrue{width:100%;position: relative;height 218px;overflow:hidden;}
